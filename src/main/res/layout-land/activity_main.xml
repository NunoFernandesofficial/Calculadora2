<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="1pt"
        android:layout_marginLeft="9dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:cursorVisible="false"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:onClick="numberEvent"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="23pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent"
            android:background="#FFFFFF">


            <Button
                android:id="@+id/buapagar"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2pt"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:onClick="ApagarEvent"
                android:text="Apagar"

                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:text="+/-"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="percentEvent"
                android:text="%"
                android:textColor="@color/cizento"
                android:textSize="15sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/buDivide"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_button2"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="operatorEvent"
                android:text="/"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >







            <Button
                android:id="@+id/bu7"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="numberEvent"
                android:text="7"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:text="8"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="numberEvent"
                android:text="9"
                android:textColor="@color/cizento"
                android:textSize="15sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/buMultiply"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/my_button2"
                android:onClick="operatorEvent"
                android:text="X"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="1pt"
            android:layout_height="match_parent"
            android:background="#FFFFFF">



            <Button
                android:id="@+id/bu4"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"

                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="numberEvent"
                android:text="4"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="numberEvent"
                android:text="5"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="6"
                android:textColor="@color/cizento"
                android:textSize="15sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/buPlus"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/my_button2"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="operatorEvent"
                android:text="+"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt"
            android:background="#FFFFFF"

            >










            <Button
                android:id="@+id/bu1"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:text="1"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:text="2"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/my_button"
                android:onClick="numberEvent"
                android:text="3"
                android:textColor="@color/cizento"
                android:textSize="15sp"

                android:textStyle="bold" />

            <Button
                android:id="@+id/buMinus"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_weight="1"
                android:background="@drawable/my_button2"
                android:onClick="operatorEvent"
                android:text="-"
                android:textColor="@color/cizento"
                android:textSize="15sp"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:layout_marginBottom="3pt"
                >


                <Button
                    android:id="@+id/bu0"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/my_button"
                    android:onClick="numberEvent"
                    android:text="0"
                    android:textColor="@color/cizento"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buDot"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="2pt"
                    android:layout_weight="1"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/my_button"
                    android:onClick="numberEvent"
                    android:text="."
                    android:textColor="@color/cizento"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buEqual"
                    android:layout_width="119dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_button2"
                    android:onClick="equalEvent"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:text="="
                    android:textColor="@color/cizento"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </TableRow>

        </TableLayout>


</LinearLayout>


